{
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "experimentalDecorators": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "extends": [
      "prettier",
      "prettier/react",
      "prettier/standard"
    ],
    "plugins": [
      "react",
      "prettier",
      "standard"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "jsx": true
    },
    "rules": {
      "strict": [
        2,
        "never"
      ],
      "prettier/prettier": "error"
    }
}